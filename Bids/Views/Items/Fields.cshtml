@model Bids.Models.Item
@Html.HiddenFor(m => m.ItemID)
@Html.AntiForgeryToken()
<div class="form-group">
    @Html.LabelFor(m => m.Title, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.AuctionEndDate, new { @class = "col-sm-2 control-label" })
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.AuctionEndDate, new { @class = "form-control" })
    </div>
</div>
